{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log_.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": "true",
          "fileSizeLimitBytes": 104857600,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{Properties:j}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Zion1.Client": "Data Source=ASIWS-CC3QPG3\\MSSQLSERVER2022;Initial Catalog=Zion1.Client;User Id=Zion1;Password=dev@zion1.us;Connect Timeout=60;TrustServerCertificate=True"
    //"Zion1.Client": "Data Source=ASIWS-CC3QPG3\\MSSQLSERVER2022;Initial Catalog=Zion1.Client;Integrated Security=True;Connect Timeout=60;TrustServerCertificate=True"
  },
  
  "AllowedHosts": "*"
}
